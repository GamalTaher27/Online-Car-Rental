@model RentCar.Models.Cars

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/shared/_AdminLayout.cshtml";
}
<div class="container">
    <h1 class="text-center" style="color:#2E86C1; font-weight:bold;">Delete</h1>

    <h3 class="text-center">Are you sure you want to delete this ?</h3>
    <div>

        <div class="car_box">
            <div class="row">

                <div class="col-md-4">
                    <img src="~/uploads/@Html.DisplayFor(model=>model.Image)"
                         class="thumbnail"
                         style="width:250px; height:220px;" />
                </div>

                <div class="col-md-4">
                    <ul>
                        <li><p class="cdetails">Car Category:<span class="car_details"> @Html.DisplayFor(model => model.category)</span></p></li>
                        <li><p class="cdetails">Color:<span class="car_details">@Html.DisplayFor(model => model.Color)</span></p></li>
                        <li><p class="cdetails">Price:<span class="car_details">@Html.DisplayFor(model => model.Amount)</span></p></li>
                        <li><p class="cdetails">Number of chairs:<span class="car_details">@Html.DisplayFor(model => model.NumberOfChairs)</span></p></li>
                        <li><p class="cdetails">Model:<span class="car_details">@Html.DisplayFor(model => model.Model)</span></p></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger btn-lg" />

                        </div>
                    }
                </div>


            </div>
        </div>

        <div class="text-center" style="margin-top:20px; font-size:28px; text-decoration:none;"> @Html.ActionLink("Back to List", "Index") </div>


    </div>
</div>

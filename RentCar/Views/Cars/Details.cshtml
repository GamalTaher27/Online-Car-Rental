@model RentCar.Models.Cars
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/shared/_MainLayout.cshtml";
    var db = new RentCar.Models.Rent();
}

<h1 class="CarD_h text-center">Car Details</h1>
<div>
    <section class="CarDetails">
        <div class="row">
            <div class="col-md-4">
                <img src="~/uploads/@Html.DisplayFor(model => model.Image)"
                     class="thumbnail"
                     style="width:250px; height:250px;" />
            </div>
            <div class="col-md-4">
                <ul>
                    <li><p class="cdetails">Car Category :  <span class="car_detail"> @Html.DisplayFor(model => model.category)</span></p></li>
                    <li><p class="cdetails">Model :  <span class="car_detail">@Html.DisplayFor(model => model.Model)</span></p></li>
                    <li><p class="cdetails">Color :  <span class="car_detail">@Html.DisplayFor(model => model.Color)</span></p></li>
                    <li><p class="cdetails">State :  <span class="car_detail">@Html.DisplayFor(model => model.State)</span></p></li>
                    <li><p class="cdetails">Number of chairs :  <span class="car_detail">@Html.DisplayFor(model => model.NumberOfChairs)</span></p></li>
                    <li><p class="cdetails">Price :  <span class="car_detail">@Html.DisplayFor(model => model.Amount)</span>    $Per Day</p></li>
                </ul>
                <hr />
                <p>
                    <input type="text" id="CarId" value="@Model.id" style="display:none" />
                    @if (Model.State.Equals("Available"))
                    {
                        <button id="btnRent" class="btn btn-primary btn-block btn-lg rntbtn" data-toggle="modal" data-target="#rentModal">Rent</button>
                    }


                </p>
            </div>
        </div>
    </section>
</div>

@model RentCar.Models.Cars

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/shared/_AdminLayout.cshtml";
    
 }
<div class="container">
    <div class="text-center" style="font-size:32px; color:#2E86C1; font-weight:bold;">
        <p>Update Car</p>
    </div>

    @using (Html.BeginForm("Edit", "Cars", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="alert alert-danger" id="error-div" style="display:none">
                <h4>Create</h4>
            </div>

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-row">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.DropDownList("category", null, new { @class = "form-control sel1" })
                        @Html.ValidationMessageFor(model => model.category, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Model, new { placeholder = "Model", @class = "form-control sel1" })
                        @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.DropDownList("Color", null, new { @class = "form-control sel1" })
                        @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

           
            <div class="form-row">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.NumberOfChairs, new { placeholder = "Number Of Chairs", @class = "form-control sel1" })
                        @Html.ValidationMessageFor(model => model.NumberOfChairs, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.DropDownList("State", null, new { @class = "form-control sel1" })
                        @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Amount, new { placeholder = "Amount", @class = "form-control money" })
                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <div class="col-md-12">
                        <img src="~/uploads/@Model.Image" class="EditImg" width="200" height="200" />
                        <input type="file" name="upload" value="@Model.Image" />
                        @Html.TextBoxFor(model => model.Image, new { placeholder = "Model", @class = "form-control sel1", style = "display:none;" })
                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Update" class="btn btn-primary btn-lg covbtn" />
                </div>
            </div>
        </div>

     
    }

</div>